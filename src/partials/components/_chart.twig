{# set values of variables before including this component #}
<table class="chart" cellpadding="0" cellspacing="0">
    <tr>
        <td align="{{ align }}">
            <img width="{{ { width } }}"
                 src="https://image-charts.com/chart?chs={{ width }}x{{ height }}&amp;{{ params }}"
                 alt="{{ alt }}"/>
        </td>
    </tr>
</table>
